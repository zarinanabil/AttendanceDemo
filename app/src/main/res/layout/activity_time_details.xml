<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeDetailsActivity"
    android:weightSum="100"
    android:padding="@dimen/margin"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    >

    <TextView
        android:id="@+id/tv_welcomename"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="@dimen/margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:orientation="horizontal" android:layout_weight="10"
        android:weightSum="100"
        android:layout_marginBottom="@dimen/margin"
        >
    <Button
        android:id="@+id/btn_timein"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50" android:layout_marginRight="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/time_in"
        android:background="@drawable/btn_background"
        />

        <Button
            android:id="@+id/btn_timeout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50" android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/time_out"
            android:background="@drawable/btn_background"
            />
</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical" android:layout_weight="80"
        />

</LinearLayout>